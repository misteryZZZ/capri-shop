<div id="account-page">
	<div class="container validate-forms-inside">

		<div class="headings">
			<h1 class="h3">{{ 'customer.register.title' | t }}</h1>		
			<p>{{ 'customer.register.already_have_account' | t }} <a href="/account/login" class="nowrap">{{ 'customer.register.sign_in_here' | t }}</a>.</p>	
		</div>

		{% form 'create_customer' %}

			{{ form.errors | default_errors }}

			<div class="field">
				<label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
  				<input type="text"
   						name="customer[first_name]"
    					id="FirstName"
    					autofocus
    					{% if form.first_name %}value="{{ form.first_name }}"{% endif %} />
			</div>
			<div class="field">
				<label for="LastName">{{ 'customer.register.last_name' | t }}</label>
  				<input type="text"
    			name="customer[last_name]"
    			id="LastName"
    			{% if form.last_name %}value="{{ form.last_name }}"{% endif %} />
			</div>
			<div class="field">
				<label for="Email">{{ 'customer.register.email' | t }} <span class="asterix">*</span></label>
  				<input type="email"
    				name="customer[email]"
    				id="Email"
    				value="{% if form.email %}{{ form.email }}{% endif %}"
    				spellcheck="false"
    				autocomplete="off"
    				autocapitalize="off"
    				required />
			</div>
			<div class="field">
				<label for="CreatePassword">{{ 'customer.register.password' | t }} <span class="asterix">*</span></label>
				<input type="password"
    					name="customer[password]"
    					id="CreatePassword"
    					autocomplete="new-password"
    					required />
			</div>
			<div class="field">
				<button type="submit" class="full margin-top">{{ 'customer.register.submit' | t }}</button>
			</div>
		{% endform %}

	</div>
</div>
